<%- include('../partials/header') %>

<main class="container d-flex flex-column flex-fill justify-content-center">
  <h1 class="text-center mb-4">Edição de Usuário</h1>
  <form action="/usuarios/<%= usuario.id %>" method="POST">
    <div class="mb-3">
      <!-- Nome de usuário -->
      <label for="inputUsuario" class="form-label fs-5 mt-2">
        Nome de usuário
      </label>
      <input
        type="text"
        class="form-control form-control-lg"
        id="inputUsuario"
        name="usuario"
        value="<%= usuario.usuario || usuario.usuario %>"
        placeholder="Digite o nome de usuário"
        required
      />

      <!-- E-mail -->
      <label for="inputEmail" class="form-label fs-5 mt-3">E-mail</label>
      <input
        type="email"
        class="form-control form-control-lg"
        id="inputEmail"
        name="email"
        value="<%= usuario.email %>"
        placeholder="Digite o e-mail"
        required
      />

      <!-- Senha -->
      <label for="inputSenha" class="form-label fs-5 mt-3">Senha</label>
      <input
        type="password"
        class="form-control form-control-lg"
        id="inputSenha"
        name="senha"
        value="<%= usuario.senha %>"
        placeholder="Digite a nova senha"
        required
      />

      <!-- Tipo de usuário -->
      <label for="inputTipo" class="form-label fs-5 mt-3">Tipo de usuário</label>
      <select
        class="form-select form-select-lg"
        id="inputTipo"
        name="tipo"
        required
      >
        <option value="Gerente" 
          <%= usuario.tipo === "Gerente" ? "selected" : "" %>>
            Gerente
        </option>
        <option value="Funcionário" <%= usuario.tipo === "Funcionário" ? "selected" : "" %>>Funcionário</option>
        <option value="Administrador" <%= usuario.tipo === "Administrador" ? "selected" : "" %>>Administrador</option>
      </select>
    </div>

    <div class="d-flex justify-content-between mt-4">
      <a href="/usuarios" class="btn btn-secondary btn-lg">Voltar</a>
      <button type="submit" class="btn btn-success btn-lg">Salvar Alterações</button>
    </div>
  </form>
</main>

<%- include('../partials/footer') %>
