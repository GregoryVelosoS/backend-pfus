<%- include('../partials/header')%>

<main class="container d-flex flex-column flex-fill justify-content-center">
  <h1 class="text-center">Cadastro de usuário</h1>
  <form action="/usuarios/cadastrar" method="POST">
    <div class="mb-3">
      <!-- Caixinha de nome de usuário -->
      <label for="inputNome" class="form-label fs-2 mt-2">
        Nome de usuário
      </label>
      <input
        type="text"
        class="form-control form-control-lg"
        id="inputUsuario"
        name="usuario"
        placeholder="Digite o nome de usuário"
        required
      />

      <!-- Caixinha de email  -->
      <label for="inputEmail" class="form-label fs-2 mt-2"> Email </label>
      <input
        type="email"
        class="form-control form-control-lg"
        id="inputEmail"
        name="email"
        placeholder="Digite o email"
        required
      />

      <!-- Caixinha de senha  -->
      <label for="inputSenha" class="form-label fs-2 mt-2"> Senha </label>
      <input
        type="password"
        class="form-control form-control-lg"
        id="inputSenha"
        name="senha"
        placeholder="Digite o senha"
        required
      />

      <!-- Caixinha de tipo de usuário -->
      <label class="form-label fs-2 mt-2"> Tipo de usuário </label>
      <select class="form-select form-select-lg mb-3" name="tipo">
        <option value="Gerente">Gerente</option>
        <option value="Funcionário">Funcionário</option>
        <option value="Administrador">Administrador</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary btn-lg">Cadastrar</button>
  </form>
</main>

<%- include('../partials/footer') %>
