<%- include('../partials/header')%>

<main class="container text-center mt-3">
  <h1>Lista de usuários</h1>
  <a href="/usuarios/cadastrar">
    <button class="btn btn-lg btn-primary">
      <i class="bi bi-plus-circle"></i>
      Cadastrar
    </button>
  </a>
  <% if (usuarios && usuarios.length > 0) { %>
  <table class="table table-striped table-hover align-middle mt-5">
    <thead class="table-dark">
      <tr class="text-center">
        <th scope="col">ID</th>
        <th scope="col">Usuário</th>
        <th scope="col">E-mail</th>
        <th scope="col">Tipo</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% usuarios.forEach((usuario) => { %>
      <tr class="text-center">
        <td><%= usuario.id %></td>
        <td><%= usuario.usuario %></td>
        <td><%= usuario.email %></td>
        <td><%= usuario.tipo %></td>
        <td>
          <!-- Botão Editar -->
          <a
            href="/usuarios/<%= usuario.id %>"
            class="btn btn-warning btn-sm me-2"
          >
            <i class="bi bi-pencil-square"></i>
            Editar
          </a>

          <!-- Botão Excluir -->
          <a
            href="#"
            class="btn btn-danger btn-sm"
            onclick="confirmarExclusao('<%= usuario.usuario %>', '<%= usuario.id %>')"
          >
            <i class="bi bi-trash3"></i>
            Excluir
          </a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <% } else { %>
  <div class="alert alert-warning text-center mt-4">
    Nenhum usuário cadastrado no momento.
  </div>
  <% } %>

  <script>
    function confirmarExclusao(usuario, id) {
      if (confirm(`Deseja realmente excluir o usuário ${usuario}?`)) {
        window.location.href = `/usuarios/deletar/${id}`;
      }
    }
  </script>
</main>

<%- include('../partials/footer') %>
